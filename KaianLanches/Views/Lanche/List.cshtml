@model LancheListViewModel

@{
    ViewData["Titulo"] = @Model.CategoriaAtual;
    ViewData["Data"] = DateTime.Now.ToString("dd/MM/yyyy");
}

<div>
    <h2>@ViewData["Titulo"]</h2>
</div>
<h2>Data: @ViewData["Data"]</h2>
<hr />
<h3>Lanches disponíveis: @ViewBag.TotalLanches</h3>
<hr />

<div class="container">
    <div class="row">
        @foreach (var lanche in Model.Lanches)
        {
            <partial name="_LanchesResumo" for="@lanche"/>
        }
    </div>
</div>

